app:
  baseUrl: https://localhost:3000
  https:
    $include: certificate.yaml
  errorReporter: null
  telemetrydeck: null

backend:
  actions:
    pluginSources:
      - catalog
      - catalog-mcp
  baseUrl: https://localhost:7007
  listen:
    port: 7007
  cors:
    origin: https://localhost:3000
  https:
    $include: certificate.yaml
  errorReporter: null
  auth:
    externalAccess:
      - type: static
        options:
          token: ${EXTERNAL_ACCESS_MCP_TOKEN}
          subject: mcp-clients
        accessRestrictions:
          - plugin: mcp-actions
          - plugin: catalog
          - plugin: catalog-mcp

auth:
  environment: development

techdocs:
  builder: 'local'
  generator:
    runIn: 'docker'
  publisher:
    type: 'local'

